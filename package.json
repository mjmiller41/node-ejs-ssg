{
  "name": "node-ejs-ssg",
  "version": "0.0.1",
  "description": "Static site generator written for NodeJS and EJS",
  "author": "Michael J. Miller",
  "license": "MIT",
  "type": "module",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "NODE_ENV=development nodemon devServer.js",
    "inspect": "NODE_ENV=development --inspect nodemon devServer.js",
    "lint": "eslint ./",
    "build": "rm -rf docs/ && node generator/buildAll.js"
  },
  "browserslist": [
    "defaults"
  ],
  "nodemonConfig": {
    "ext": "js",
    "ignore": [
      "git/",
      "node_modules/",
      "./docs"
    ],
    "watch": [
      "server.js",
      "generator/"
    ]
  },
  "dependencies": {
    "autoprefixer": "^10.4.15",
    "browser-sync": "^2.29.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "front-matter": "^4.0.2",
    "js-yaml": "^4.1.0",
    "marked": "^7.0.5",
    "path": "^0.12.7",
    "postcss": "^8.4.29",
    "postcss-import": "^15.1.0",
    "sass": "^1.66.1"
  },
  "devDependencies": {
    "eslint": "^8.49.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "2.0.20",
    "prettier": "^3.0.3"
  }
}
