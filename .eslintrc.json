{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["airbnb-base", "plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": "error",
        "no-console": "off",
        "import/extensions": ["error", "always"],
        "lines-between-class-members": [
            "error",
            {
              "enforce": [
                { "blankLine": "always", "prev": "method", "next": "method" }
              ]
            }
        ]
    }
}
