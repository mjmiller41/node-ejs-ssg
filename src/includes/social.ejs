<ul class="social-media-list">
  <% if (site.github_username) { %>
  <li>
    <a href="https://github.com/<%- site.github_username %>" target="_blank">
      <svg class="svg-icon">
        <use href="/assets/images/svg-icons/brands.svg#github"></use>
      </svg>
      <span class="username">github.com/<%- site.github_username %></span>
    </a>
  </li>
  <% } %> <% if (site.linkedin_username) { %>
  <li>
    <a href="https://www.linkedin.com/in/<%= site.linkedin_username %>" target="_blank">
      <svg class="svg-icon">
        <use href="/assets/images/svg-icons/brand"></use>
      </svg>
      <span class="username">in/<%- site.linkedin_username %></span>
    </a>
  </li>
  <% } %> <% if (site.twitter_username) { %>
  <li>
    <a href="https://www.twitter.com/<%= site.twitter_username %>" target="_blank">
      <svg class="svg-icon">
        <use href="/assets/images/svg-icons/brands.svg#twitter"></use>
      </svg>
      <span class="username">&#64;<%- site.twitter_username %></span>
    </a>
  </li>
  <% } %>
</ul>
